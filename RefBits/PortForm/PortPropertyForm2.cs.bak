        private void LoadTestData(object sender, EventArgs e)
        {
            DrawMaterialStream = new DrawMaterialStream();
            List<string> list = new List<string>();
            list.AddRange(TestStreams.Names());
            SelectionDLG dlg = new(list.ToArray());

            dlg.ShowDialog();

            switch (dlg.DLGResult)
            {
                case "ReducedUralsCrude":
                    DrawMaterialStream.Components.AddRange(TestStreams.ReducedUralsCrude());
                    break;

                case "ShortResidue3":
                    DrawMaterialStream.Components.AddRange(TestStreams.ShortResidue3());
                    break;

                case "ShortResidue2":
                    DrawMaterialStream.Components.AddRange(TestStreams.ShortResidue2());
                    break;

                case "ShortResidue":
                    DrawMaterialStream.Components.AddRange(TestStreams.ShortResidue());
                    break;

                case "Residue":
                    DrawMaterialStream.Components.AddRange(TestStreams.Residue());
                    break;

                case "Residue2":
                    DrawMaterialStream.Components.AddRange(TestStreams.Residue2());
                    break;

                case "Crude":
                    DrawMaterialStream.Components.AddRange(TestStreams.Crude());
                    break;
            }

            if (DrawMaterialStream != null)
            {
                portworksheet.DrawMaterialStream = DrawMaterialStream;
                portworksheet.PortsPropertyWorksheetInitialise(DrawMaterialStream.Port, displaylist);
                StreamMaterial dbs = (StreamMaterial)port.Owner;
                FlowSheet fs = dbs.Flowsheet;
                fs.ComponentList.AddRange(DrawMaterialStream.Components);
            }
        }

